<div class="{% if section.settings.include_margins %}page-width{% endif %} slider-product__container">
  <div class="slider-product__content">
    <h2 class="slider-product__title">Produt title</h2>
    <div class="slider-product__subtitle">Produt subtitle</div>
  </div>
  <div class="products_slider">
    <div class="products_list">
      {% for block in section.blocks %}
        {% if block.type == 'product_list' %}
          {% assign products = block.settings.collection_id.products %}
          {% for product in products %}
            <a href="{{ product.url }}" class="product_link">
              <div class="product_slide">
                {% if product.featured_image %}
                  <img
                    class="product_image"
                    src="{{ product.featured_image | image_url: width: 240, height: 240, crop: 'center' }}"
                    alt="{{ product.featured_image.alt | default: product.title | escape }}"
                    width="240"
                    height="240"
                  >
                {% endif %}
                <h3 class="product_title">{{ product.title }}</h3>
                {% if product.content != blank %}
                  <div class="product_content">
                    {{ product.content | truncate: 200, '...' }}
                  </div>
                {% endif %}
                <div class="product_price">
                  {{ product.price | money_with_currency }}
                </div>
              </div>
            </a>
            {%- assign product_form_id = 'quick-add-' | append: section_id | append: product.id -%}
            <product-form>
              {%- form 'product',
                product,
                id: product_form_id,
                class: 'form',
                novalidate: 'novalidate',
                data-type: 'add-to-cart-form'
              -%}
                <input
                  type="hidden"
                  name="id"
                  value="{{ product.selected_or_first_available_variant.id }}"
                  disabled
                >
                <button
                  id="{{ product_form_id }}-submit"
                  type="submit"
                  name="add"
                  class="quick-add__submit button button--full-width button--secondary"
                  aria-haspopup="dialog"
                  aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ product.id }}"
                  aria-live="polite"
                  data-sold-out-message="true"
                  {% if product.selected_or_first_available_variant.available == false %}
                    disabled
                  {% endif %}
                >
                  <span>
                    {%- if product.selected_or_first_available_variant.available -%}
                      {{ 'products.product.add_to_cart' | t }}
                    {%- else -%}
                      {{ 'products.product.sold_out' | t }}
                    {%- endif -%}
                  </span>
                  <span class="sold-out-message hidden">
                    {{ 'products.product.sold_out' | t }}
                  </span>
                  <div class="loading-overlay__spinner hidden">
                    <svg
                      aria-hidden="true"
                      focusable="false"
                      role="presentation"
                      class="spinner"
                      viewBox="0 0 66 66"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                    </svg>
                  </div>
                </button>
              {%- endform -%}
            </product-form>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{{ 'slick.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.css' | asset_url | stylesheet_tag }}
<script src="{{ 'jquery.min.js' | asset_url }}" defer></script>
<script src="{{ 'slick.min.js' | asset_url }}" defer></script>
<script src="{{ 'product-form.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    $('#shopify-section-{{section.id}} .products_list').slick({
      slidesToShow: {{section.settings.slider_item}},
      infinite: true,
      slidesToScroll: 2,
      speed: 1000,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: {{ section.settings.slider_item }},
            slidesToScroll: {{ section.settings.slider_item }}
          }
        },
        {
          breakpoint: 576,
          settings: {
            slidesToShow:  1,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
</script>

{% schema %}
{
  "name": "Slider Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "slider_item",
      "label": "Items per page",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "product_list",
      "name": "Product List",
      "settings": [
        {
          "type": "collection",
          "id": "collection_id",
          "label": "Select a collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider Products"
    }
  ]
}
{% endschema %}
