<div class="{% if section.settings.include_margins %}page-width{% endif %}">
  <div class="products_slider">
    <div class="products_list">
      {% for block in section.blocks %}
        {% if block.type == 'product_list' %}
          {% assign products = block.settings.collection_id.products %}
          {% for product in products %}
            <div class="slide">
              <h3>{{ product.title }}</h3>
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 240, height: 240, crop: 'center' }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  width="240"
                  height="240"
                >
              {% endif %}
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{{ 'slick.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.css' | asset_url | stylesheet_tag }}
<script src="{{ 'jquery.min.js' | asset_url }}" defer></script>
<script src="{{ 'slick.min.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    $('#shopify-section-{{section.id}} .products_list').slick({
      slidesToShow: {{section.settings.slider_item}},
      slidesToScroll: 3,
      infinite: true,
    });
  });
</script>

{% schema %}
{
  "name": "Slider Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "slider_item",
      "label": "Items per page",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "product_list",
      "name": "Product List",
      "settings": [
        {
          "type": "collection",
          "id": "collection_id",
          "label": "Select a collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider Products"
    }
  ]
}
{% endschema %}
