<div class="{% if section.settings.include_margins %}page-width{% endif %}">
  <div class="slider">
    {% for block in section.blocks %}
      {% if block.type == 'product_list' %}
        {% assign products = block.settings.collection_id.products %}
        {% for product in products %}
          <div class="slide">
            {{ product.title }}
          </div>
          {% if product.featured_image %}
            <img
              src="{{ product.featured_image | img_url: 'medium' }}"
              alt="{{ product.featured_image.alt | escape }}"
              width="{{ product.featured_image.width }}"
              height="{{ product.featured_image.height }}"
            >
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>
</div>

{{ 'slick.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.css' | asset_url | stylesheet_tag }}
<script src="{{ 'jquery.min.js' | asset_url }}" defer></script>
<script src="{{ 'slick.min.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    console.log('product init');
    $('.slider').slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      infinite: true,
    });
  });
</script>

{% schema %}
{
  "name": "Slider Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "product_list",
      "name": "Product List",
      "settings": [
        {
          "type": "collection",
          "id": "collection_id",
          "label": "Select a collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider Products"
    }
  ]
}
{% endschema %}
